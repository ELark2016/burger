
<h1>Eat-Da-Burger!</h1>
<img src="../assets/img/hamburger_small.png" alt="Hamburger">
<form class="create-form">

  <h2>New Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that have been devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/if}}
  {{/each}}

</ul>

<form class="create-form">
  <div class="form-group">
    <input type="text" id="new-burger" name="name">
  </div>
  <button type="submit">Submit</button>
  
</form>


